# Production environment variables
# Copy this file to .env.production and update with actual values

# Application
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:your-secure-password@postgres:5432/ai_news_portal

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# RSS Feeds (comma-separated)
RSS_FEED_URLS=https://techcrunch.com/feed/,https://feeds.macrumors.com/macrumors-all

# Email (optional - for newsletters)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Telegram (optional - for bot notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTLs (in seconds)
CACHE_TTL_ARTICLES=300
CACHE_TTL_SEARCH=180
CACHE_TTL_USER=600

# AI Configuration
AI_SUMMARY_MAX_TOKENS=150
AI_CATEGORY_MODEL=gpt-3.5-turbo
AI_SUMMARY_MODEL=gpt-3.5-turbo