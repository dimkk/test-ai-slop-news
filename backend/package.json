{
  "name": "ai-news-portal-backend",
  "version": "1.0.0",
  "description": "Backend for AI News Portal",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "db:migrate": "bun run src/database/migrate.ts",
    "db:seed": "bun run src/database/seed.ts",
    "ingest": "bun run src/ingestion/index.ts"
  },
  "dependencies": {
    "hono": "^3.12.0",
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.0",
    "redis": "^4.6.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "zod": "^3.22.0",
    "rss-parser": "^3.13.0",
    "openai": "^4.20.0",
    "cron": "^3.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.0"
  }
}
