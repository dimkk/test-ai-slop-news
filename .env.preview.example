# Preview environment variables
# This file is used for Coolify preview deployments

# Application
NODE_ENV=preview
PORT=3000

# Database (unique per PR)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_news_portal_preview_${PR_NUMBER}

# Redis
REDIS_URL=redis://redis:6379

# JWT (unique per preview)
JWT_SECRET=preview-jwt-secret-for-pr-${PR_NUMBER}

# OpenAI (use test key or limit usage)
OPENAI_API_KEY=sk-test-key-or-limited-production-key

# Frontend URL (preview)
FRONTEND_URL=https://preview-frontend-${PR_NUMBER}.your-domain.com

# RSS Feeds (limit for preview to avoid rate limits)
RSS_FEED_URLS=https://techcrunch.com/feed/

# Logging (verbose for debugging)
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Development settings
SKIP_EMAIL_NOTIFICATIONS=true
SKIP_TELEGRAM_NOTIFICATIONS=true

# Cache (shorter TTL for preview)
CACHE_TTL_ARTICLES=60
CACHE_TTL_SEARCH=30
CACHE_TTL_USER=120

# AI Configuration (lower limits for preview)
AI_SUMMARY_MAX_TOKENS=50
AI_CATEGORY_MODEL=gpt-3.5-turbo
AI_SUMMARY_MODEL=gpt-3.5-turbo